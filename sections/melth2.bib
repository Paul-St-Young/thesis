title = {{Benchmarking density functionals for hydrogen-helium mixtures with quantum Monte Carlo: Energetics, pressures, and forces}},
url = {https://link.aps.org/doi/10.1103/PhysRevB.93.035121},
volume = {93},
year = {2016}
}
