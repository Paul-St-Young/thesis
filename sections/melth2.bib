doi = {10.1103/PhysRevB.69.144209},
file = {:D$\backslash$:/soft/Mendeley/papers/Knudson et al. - 2004 - Principal Hugoniot, reverberating wave, and mechanical reshock measurements of liquid deuterium to 400 GPa using.pdf:pdf},
issn = {1098-0121},
journal = {Phys. Rev. B},
month = {apr},
number = {14},
pages = {144209},
title = {{Principal Hugoniot, reverberating wave, and mechanical reshock measurements of liquid deuterium to 400 GPa using plate impact techniques}},
url = {https://link.aps.org/doi/10.1103/PhysRevB.69.144209},
volume = {69},
