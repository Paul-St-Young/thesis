issn = {00207608},
journal = {Int. J. Quantum Chem.},
month = {mar},
number = {S19},
pages = {497--523},
title = {{Density functional theory and the band gap problem}},
url = {http://doi.wiley.com/10.1002/qua.560280846},
volume = {28},
year = {1985}
}
